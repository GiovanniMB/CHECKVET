<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head')%>
    <title>CHECKVET - Citas</title>
</head>

<body>
    <%- include('../partials/header')%>
    <main>
        <div class="container">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4><strong>Listado de Citas</strong></h4>
                    <a href="/veterinarios/registro" type="button" class="btn btn-success">Nuevo <i class="bi bi-plus-circle"></i></a>
                </div>

                <div class="card-body">
                    <hr>
                    <div id="mensajeRegistro"></div> <table class="table table-hover">
                       
                        <thead class="thead-light">
                            <tr class="text-center">
                                <th scope="col">Nombre Mascota</th>
                                <th scope="col">Motivo</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Operaciones</th>
                            </tr>
                        </thead>
                    <tbody>
                            <% citas.forEach(cita => { %>
                                <tr class="text-center">
                                    <td><%= cita.nombreMascota %></td>
                                    <td><%= cita.motivo %></td>
                                    <td><%= cita.fecha ? new Date(cita.fecha).toISOString().split('T')[0] : 'Sin fecha' %></td>
                                    <td>
                                        <a href="/consulta/<%= cita.idCita %>" class="btn btn-sm btn-primary">
                                            Registrar Consulta
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer')%>
    
</body>

</html>