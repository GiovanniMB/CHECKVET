<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head')%>
    <title>CHECKVET - Clinicas</title>
</head>

<body>
    <%- include('../partials/header')%>
    <main>
        <div class="container">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4><strong>Listado de Clinicas</strong></h4>
                    <a href="/clinicas/registro" type="button" class="btn btn-success">Nueva <i class="bi bi-plus-circle"></i></a>
                </div>

                <div class="card-body">
                    <hr>
                    <div id="mensajeRegistro"></div> <table class="table table-hover">
                        <thead class="thead-light">
                            <tr class="text-center">
                                <th scope="col">Nombre</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Municipio/Alcaldía</th>
                                <th scope="col">Colonia</th>
                                <th scope="col">Operaciones</th>
                            </tr>
                        </thead>
                        <tbody>
  <% if (clinicas && clinicas.length > 0) { %>
    <% clinicas.forEach(clinica => { %>
      <tr class="text-center">
        <td><%= clinica.nombreClinica %></td>
        <td><%= clinica.estado %></td>
        <td><%= clinica.municipio %></td>
        <td><%= clinica.colonia %></td>
        <td class="text-center">
        <a href="/veterinarios/registro?idClinica=<%= clinica.id %>" class="btn btn-sm btn-success">
    <i class="bi bi-person-fill-add"></i>
  </a>  
        </td>
      </tr>
    <% }) %>
  <% } else { %>
    <tr><td colspan="5" class="text-center">No hay clínicas registradas</td></tr>
  <% } %>
</tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer')%>
    <script src="/clinicasService.js"></script>
    <script src="/clinicasController.js"></script>


</body>

</html>